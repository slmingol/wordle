{
  "name": "wordle-plus",
  "description": "A remake of the popular game Wordle with additional modes and features.",
  "version": "1.5.2",
  "type": "module",
  "private": true,
  "license": "GPL-3.0",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build && node scripts/inject-version.js",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.svelte",
    "lint:fix": "eslint . --ext .ts,.svelte --fix",
    "format": "prettier --write \"src/**/*.{ts,svelte,js,css}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MikhaD/wordle.git"
  },
  "keywords": [],
  "author": "MikhaD",
  "bugs": {
    "url": "https://github.com/MikhaD/wordle/issues"
  },
  "homepage": "https://github.com/MikhaD/wordle#readme",
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "@tsconfig/svelte": "^5.0.4",
    "@types/seedrandom": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^17.3.0",
    "happy-dom": "^20.6.1",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "sass": "^1.83.0",
    "seedrandom": "^3.0.5",
    "svelte": "^4.2.19",
    "svelte-check": "^4.1.1",
    "svelte-eslint-parser": "^1.4.1",
    "terser": "^5.46.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vite": "^5.4.18",
    "vite-plugin-compression": "^0.5.1",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,svelte}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all",
    "not ie 11"
  ]
}
